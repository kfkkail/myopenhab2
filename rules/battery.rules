rule "UPSTAIRS_PIR_BATTERY Notification"
when
  Item UPSTAIRS_PIR_BATTERY received update
then
  logDebug("rules", "UPSTAIRS_PIR_BATTERY updated to " + UPSTAIRS_PIR_BATTERY.state + "%")
  if (UPSTAIRS_PIR_BATTERY.state <= 10) {
    sendNotification("kfkkail@gmail.com", "Upstairs PIR batteries 2xAAA - " + UPSTAIRS_PIR_BATTERY.state + "%")
  }
end

